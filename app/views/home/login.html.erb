<body class="text-center">
  <form class="form-signin" action="/home" method="POST">
    <%= token_tag nil %>
    <h1 class="h3 mb-3 font-weight-normal">Ingrese el nombre de usuario</h1>
    <input type="text" id="user" name="user" class="form-control mb-3" placeholder="Nombre de usuario">
    <button class="btn btn-lg btn-primary btn-block" type="submit" id="submit">Ingresar</button>
  </form>

<style>
  html,
  body {
    height: 100%;
  }

  body {
    display: -ms-flexbox;
    display: flex;
    -ms-flex-align: center;
    align-items: center;
    padding-top: 40px;
    padding-bottom: 40px;
    background-color: #f5f5f5;
  }

  .form-signin {
    width: 100%;
    max-width: 330px;
    padding: 15px;
    margin: auto;
  }
  .form-signin .checkbox {
    font-weight: 400;
  }
  .form-signin .form-control {
    position: relative;
    box-sizing: border-box;
    height: auto;
    padding: 10px;
    font-size: 16px;
  }
  .form-signin .form-control:focus {
    z-index: 2;
  }
  .form-signin input[type="email"] {
    margin-bottom: -1px;
    border-bottom-right-radius: 0;
    border-bottom-left-radius: 0;
  }
  .form-signin input[type="password"] {
    margin-bottom: 10px;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
  }
</style>
</body>